generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
  moduleFormat    = "cjs"
    binaryTargets   = ["native"]
}

datasource db {
  provider = "postgresql"
}


model Registration {
  id           String   @id @default(uuid())
  firstName    String
  lastName     String
  email        String   
  phone        String?
  teudatZehut  String   
  aliyahDate   DateTime


  membershipId String   @unique
  validFrom    DateTime
  paymentMethod       String?
  validTo      DateTime
  isActive     Boolean  @default(false)


  otp             String?
  otpExpiresAt    DateTime?
  otpAttemptCount Int       @default(0)
  otpWindowStart  DateTime?

  payments Payment[]
  redeems  Redeem[]

  createdAt DateTime @default(now())
}


// Category -> Partner
model Category {
  id       String     @id @default(uuid())
  name     String
  partners Partner[]
}


// Partner -> Category
model Partner {
  id         String    @id @default(uuid())
  name       String
  discount   String
  categoryId String

  category Category  @relation(fields: [categoryId], references: [id])
  redeems  Redeem[]
}


// Redeem -> Registration + Partner
model Redeem {
  id             String   @id @default(uuid())
  registrationId String
  partnerId      String
  redeemedAt     DateTime @default(now())

  registration   Registration @relation(fields: [registrationId], references: [id])
  partner        Partner      @relation(fields: [partnerId], references: [id])
}



// Payment -> Registration (Stripe)
model Payment {
  id              String   @id @default(uuid())
  registrationId  String
  stripeSessionId String?  @unique  
  amount          Int
  currency        String
  status          String
  method          String?  
  cardholderName  String?
  cardNumber      String?
  expireDate      String?
  cvc             String?
  createdAt       DateTime @default(now())

  registration Registration @relation(fields: [registrationId], references: [id])
}
